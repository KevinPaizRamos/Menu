@model Menu.Models.Dish
@{
    ViewData["Tttle"] = "Details";
}
<div class="Container">
    <div class="d-flex justify-content-center">
        <h3>@Model.name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" style="width:35%" />
    </div>
    <div class="d-flex justify-content-center">
        @Model.Price.ToString("N2") Dollars
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach(var item in Model.DishIngredient){
                <li>
                    @item.Ingrident.Name
                </li>
            }
        </ul>
      </div>
      <a class="btn btn-info" asp-action="Index">Back to the Menu</a>
</div>